<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ColorFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ColorFilter"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_XFormode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XforMode"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_eraser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="橡皮擦"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Path"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_QR_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二维码"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_text_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于文字"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_MaskFilter_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MaskFilter"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_shader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shader"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_interpolator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="插值器"
                android:textAllCaps="false"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Main2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="activity的插件"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_twoWay_toStartActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启activity的两种方式"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_canvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="canvas"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_pager_turn_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模仿如故--还不完善"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_pager_turnView_aige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="翻书"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_draw_broken_line_aige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绘制翻书折线"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="研究 attr"
                android:textAllCaps="false"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/imageview_rotate_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片旋转练习"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>