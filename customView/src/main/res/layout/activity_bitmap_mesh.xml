<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bitmap_mesh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.customview.activity.canvas.CanvasActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_big_bosoms_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="big bosoms girl"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_bitmap_mesh_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bitmapMeshActiviyt"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_canvas_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="canvas的大小可以有bitmap决定"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_canvas_clip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="画布的裁剪"/>

        <Button
            android:id="@+id/btn_canvas_clip_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="画布的裁剪"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_canvas_clip_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="裁剪-rect-intersect"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_canvas_clip_rect_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="裁剪-rect-union"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_snow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下雪"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_my_snow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下雪-my"
            android:textAllCaps="false"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_ccw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CCW or CW"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_draw_broken_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绘制折线图"/>

        <Button
            android:id="@+id/btn_regionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="region解释"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_canvas_save_restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="画布...1"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_canvas_save_restore_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="画布...2"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_canvas_save_restore_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="画布...3"
            android:textAllCaps="false"/>

    </LinearLayout>


</LinearLayout>
