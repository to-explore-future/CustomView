<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_canvas_size"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.customview.activity.canvas.CanvasSizeActivity">

    <ImageView
        android:id="@+id/iv_canvas_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignBottom="@+id/iv_canvas_size"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="把一个空的bitmap注入画布,画布就变成了bitmap的大小,canvas再绘制的时候,就会把绘制的数据绘制到bitmap,相当于bitmap保存了canvas绘制的数据"/>


</LinearLayout>
